{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },

    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],

    "rules": {
        "no-unused-vars": 0,
        "curly": [1, "multi-line"],
        "no-bitwise": 1
    },

    "ecmaFeatures": {
        "jsx": true
    },

    "plugins": [ "react" ]
}
